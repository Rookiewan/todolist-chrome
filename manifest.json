{
  "name": "todolist",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "a plugin to write todolist",
  "browser_action": {
    "default_icon": "./assets/logo.png",
    "default_title": "todolist",
    "default_popup": "main.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"

  ],
  "web_accessible_resources": []
}
